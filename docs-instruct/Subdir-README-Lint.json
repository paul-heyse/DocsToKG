    { "title": "System overview", "pattern": "^## System overview", "min_lines": 6 },
    { "title": "Entry points & contracts", "pattern": "^## Entry points & contracts", "min_lines": 3 },
    { "title": "Configuration", "pattern": "^## Configuration", "min_lines": 3 },
    { "title": "Data contracts & schemas", "pattern": "^## Data contracts & schemas", "min_lines": 2 },
    { "title": "Interactions with other packages", "pattern": "^## Interactions with other packages", "min_lines": 2 },
    { "title": "Observability", "pattern": "^## Observability", "min_lines": 3 },
    { "title": "Security & data handling", "pattern": "^## Security & data handling", "min_lines": 3 },
    { "title": "Development tasks", "pattern": "^## Development tasks", "min_lines": 3 },
    { "title": "Agent guardrails", "pattern": "^## Agent guardrails", "min_lines": 4 },
    { "title": "FAQ", "pattern": "^## FAQ", "min_lines": 2 }
