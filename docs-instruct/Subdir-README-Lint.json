  "order": [
    "Quickstart",
    "Common commands",
    "Folder map",
    "System overview",
    "Entry points & contracts",
    "Configuration",
    "Data contracts & schemas",
    "Interactions with other packages",
    "Observability",
    "Security & data handling",
    "Development tasks",
    "Agent guardrails",
    "FAQ"
